<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <TextView
        android:id="@+id/curtain_tip_button_last"
        android:text="@string/last_step"
        android:textColor="@color/color_white"
        android:background="@drawable/shape_4_radius_white_stroke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:layout_margin="@dimen/dp_10"
        app:layout_constraintBottom_toTopOf="@+id/curtain_tip_button_next"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/curtain_tip_button_next"
        android:text="@string/next_step"
        android:textColor="@color/color_white"
        android:background="@drawable/shape_4_radius_white_stroke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:layout_margin="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</android.support.constraint.ConstraintLayout>