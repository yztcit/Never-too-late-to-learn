<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_data_storage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.wk.myapplication.learndata.DataStorageActivity">

    <TextView
        android:id="@+id/tv_data_storage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/learn_data_storage" />

    <ListView
        android:id="@+id/lv_data_file"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_data_images"
            android:text="@string/data_storage_images"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size_12sp"
            android:textColor="@color/color_white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_data_audios"
            android:text="@string/data_storage_audios"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size_12sp"
            android:textColor="@color/color_white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_data_videos"
            android:text="@string/data_storage_videos"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size_12sp"
            android:textColor="@color/color_white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_data_documents"
            android:text="@string/data_storage_documents"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size_12sp"
            android:textColor="@color/color_white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_data_archives"
            android:text="@string/data_storage_archives"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size_12sp"
            android:textColor="@color/color_white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_data_apps"
            android:text="@string/data_storage_apps"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size_12sp"
            android:textColor="@color/color_white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_data_downloads"
            android:text="@string/data_storage_downloads"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size_12sp"
            android:textColor="@color/color_white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2" />

        <Button
            android:id="@+id/btn_data_more"
            android:text="@string/data_storage_more"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size_12sp"
            android:textColor="@color/color_white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>
