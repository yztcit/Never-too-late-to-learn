<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/activity_component"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.chen.coolandroid.learncomponent.ComponentActivity">

    <TextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_root"
        android:text="to second activity"
        android:textAllCaps="false"
        android:layout_below="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_rx_process"
        android:text="to rx practise"
        android:textAllCaps="false"
        android:layout_below="@+id/btn_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_easy_request"
        android:text="test activity result"
        android:textAllCaps="false"
        android:layout_below="@+id/btn_rx_process"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>
