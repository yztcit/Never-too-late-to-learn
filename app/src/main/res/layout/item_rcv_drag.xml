<?xml version="1.0" encoding="utf-8"?>
<com.nttn.coolandroid.learnui.widget.drag.SwipeItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="1dp"
    android:background="@color/color_white"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        app:layout_itemType="main"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_test"
            tools:text="测试数据1"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_black"
            android:padding="@dimen/dp_10"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        app:layout_itemType="menu"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="删除"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:text="编辑"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</com.nttn.coolandroid.learnui.widget.drag.SwipeItemLayout>