<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SingleFlipView">
        <attr name="flip_color" format="color"/>
        <attr name="flip_duration" format="integer"/>
        <attr name="flip_arrow_color" format="color"/>
        <attr name="flip_drag_width" format="dimension"/>
        <attr name="flip_arrow_stroke_width" format="dimension"/>
        <attr name="flip_anim_type" >
            <flag name="Linear"     value="0" /><!--以常量速率改变-->
            <flag name="Decelerate" value="1" /><!--在动画开始的地方快然后慢-->
            <flag name="Bounce"     value="2" /><!--动画结束的时候弹起-->
            <flag name="Accelerate" value="3" /><!--在动画开始的地方速率改变比较慢，然后开始加速-->
        </attr>
    </declare-styleable>
</resources>